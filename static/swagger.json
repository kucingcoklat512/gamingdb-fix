{
  "openapi": "3.0.0",
  "info": {
    "title": "DBGamesAPI",
    "version": "1.0.0",
    "description": "Database koleksi Video Games"
  },
  "servers": [
    {
      "url": "https://gamingdb-fix.vercel.app/",
      "description": "Development"
    }
  ],
  "paths": {
    "/developers": {
      "get": {
        "summary": "Get all developers",
        "description": "Menampilkan semua data developer.",
        "responses": {
          "200": {
            "description": "A list of developers",
            "content": {
              "application/json": {
                "example": {
                  "data": [
                    { "id": 1, "name": "Developer A" },
                    { "id": 2, "name": "Developer B" }
                  ]
                },
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 1 },
                      "name": { "type": "string", "example": "Developer A" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
